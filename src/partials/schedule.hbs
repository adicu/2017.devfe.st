<section class="schedule-section" id="schedule">
  <div class="separator">
    <h2><a href="#schedule" class="scrolly-link">Schedule</a></h2>
  </div>
  <div class="content">
  	{{#each schedule}}
  		<div class="day" id="{{id}}">
  			<h3 class="day-name"><a href="#{{id}}" class="scrolly-link">{{day}}</a></h3>
          <table>
            {{#each events}}
              <tr class="event">
                <td class="schedule-times"><span class="event-time">{{time}}</span></td>
                <td class="event-details">
                  <span class="event-name">{{name}}</span>
        					<span class="event-location">
          					{{#if location-link}}
          						<a href="{{location-link}}">{{location}}</a>
                    {{else}}
                      {{location}}
          					{{/if}}
                  </span>
                  {{#if desc}}
                    <div class="desc">{{desc}}</div>
                  {{/if}}
                  {{#if img}}
                    <img src={{img}} class="sched-img"></img>
                  {{/if}}
                </td>
              </tr>
          {{/each}}
        </table>
  		</div>
  	{{/each}}
	</div>
</section>
